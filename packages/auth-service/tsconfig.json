{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021", // compile to es6
    "lib": ["es2021", "dom"],  // Add "dom" here
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "pretty": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
