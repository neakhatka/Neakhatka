{
  "name": "company-service",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "description": "profile microservice for our micro sample app",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "restart": "pm2 restart ecosystem.config.js",
    "delete": "pm2 delete all",
   "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && cp package.json ./build/ && [ -d configs ] && cp -R configs ./build/ || echo 'configs directory not found, skipping...' && cp ecosystem.config.js ./build/",
    "clean": "rm -rf ./build && rm -rf ./src//*.js && rm -rf ./src//*.js.map",
    "gen:spec": "tsoa spec",
    "gen:routes": "tsoa routes",
    "gen:all": "npm run gen:spec && npm run gen:routes",
    "test": "cross-env NODE_ENV=testing jest --watchAll"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.ts"
    ]
  },
  "author": "San Visal",
  "dependencies": {
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/on-headers": "^1.0.3",
    "amqplib": "^0.10.4",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "on-headers": "^1.0.2",
    "redoc-express": "^2.1.0",
    "swagger-ui": "^5.17.14",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.2.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsoa": "^6.2.1",
    "typescript": "^5.4.5"
  }
}
